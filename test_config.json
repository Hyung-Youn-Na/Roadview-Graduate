{
    "name": "BART_GRUFC",
    "n_gpu": 1,

    "arch": {
        "type": "Custom_lm",
        "args": {}
    },
    "data_loader": {
        "type": "SanghoDataLoader",
        "args":{
            "data_file": "./gt_real_object_test.txt",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0001,
            "momentum": 0.9
        }
    },
    "loss": "cross_entrophy_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 20,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
